<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_default"
        >
        <View
            android:id="@+id/view_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_12dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/bg_system"/>
        <TextView
            android:id="@+id/car_vin_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/view_1"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="JFAIOWFJAOIJFAOIJFWOI"
            android:layout_marginLeft="@dimen/size_12dp"
            android:layout_marginTop="@dimen/size_13dp"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/car_vin_txt"
            app:layout_constraintTop_toTopOf="@id/car_vin_txt"
            app:layout_constraintBottom_toBottomOf="@+id/car_vin_txt"
            android:text="cs75plus"
            android:background="@drawable/car_series_back"
            android:layout_marginLeft="@dimen/size_12dp"
            android:textSize="@dimen/size_12sp"
            android:padding="@dimen/size_5sp"
        />

        <TextView
            android:id="@+id/car_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_12sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/car_vin_txt"
            app:layout_constraintBottom_toBottomOf="@+id/car_vin_txt"
            android:text="12：30"
            android:layout_marginRight="@dimen/size_12dp"/>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/car_vin_txt"
            android:layout_marginLeft="@dimen/size_12dp"
            android:layout_marginRight="@dimen/size_12dp"
            android:layout_marginTop="@dimen/size_13dp"/>

        <TextView
            android:id="@+id/car_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="位置：aaaaaa"
            android:textSize="@dimen/size_14sp"
            android:layout_marginTop="@dimen/size_12dp"
            app:layout_constraintTop_toBottomOf="@+id/view"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/size_12dp"
            />

        <TextView
            android:id="@+id/car_warehouse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/size_14sp"
            android:text="仓库：adwdadasdaw"
            app:layout_constraintTop_toBottomOf="@+id/car_position"
            app:layout_constraintLeft_toLeftOf="@+id/car_position"
            android:layout_marginTop="@dimen/size_12dp"
            />

        <TextView
            android:id="@+id/car_lack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/car_warehouse"
            app:layout_constraintLeft_toLeftOf="@+id/car_warehouse"
            android:text="缺件：dawdafa"
            android:textSize="@dimen/size_14sp"
            android:layout_marginTop="@dimen/size_12dp"
            android:layout_marginBottom="@dimen/size_12dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/car_lack"
            android:background="@color/bg_default"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>