<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activity.main.SearchFragment"
    android:background="@color/transparent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_default"
    android:paddingTop="@dimen/size_48dp"
    android:orientation="horizontal"
    >
    <ImageView
        android:id="@+id/user_head"
        android:layout_width="@dimen/size_32dp"
        android:layout_height="@dimen/size_32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@mipmap/ic_head"
        android:layout_marginBottom="@dimen/size_8dp"
        android:layout_marginLeft="@dimen/size_16dp"
        android:layout_gravity="bottom"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/size_12dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/size_6dp">
        <FrameLayout
            android:id="@+id/top_vin_input"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_36dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="@dimen/size_12dp"
            android:background="@drawable/search_vin_edit_bac">
            <TextView
                android:id="@+id/top_vin_input_edit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_36dp"
                app:layout_constraintBottom_toBottomOf="@+id/user_head"
                app:layout_constraintTop_toTopOf="@+id/user_head"
                android:layout_marginRight="@dimen/size_40dp"
                android:background="@drawable/search_vin_edit_bac"
                android:gravity="center"
                android:hint="请输入车架号搜索"/>
        </FrameLayout>

        <ImageView
            android:id="@+id/search_vin_scan"
            android:layout_width="@dimen/size_24dp"
            android:layout_height="@dimen/size_24dp"
            android:background="@drawable/scan"
            app:layout_constraintRight_toRightOf="@+id/top_vin_input"
            app:layout_constraintTop_toTopOf="@+id/top_vin_input"
            app:layout_constraintBottom_toBottomOf="@+id/top_vin_input"
            android:layout_marginRight="@dimen/size_12dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>



    
</LinearLayout>
    

</FrameLayout>