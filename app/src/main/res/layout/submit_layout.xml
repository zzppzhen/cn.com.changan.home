<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/transparent">

<!--    <com.amap.api.maps.MapView-->
<!--        android:id="@+id/parking_map"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        />-->

    <ImageView
        android:id="@+id/submit_user_head"
        android:layout_width="@dimen/size_32dp"
        android:layout_height="@dimen/size_32dp"
        android:src="@mipmap/ic_head"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="@dimen/size_50dp"
        android:layout_marginLeft="@dimen/size_16dp"/>
    <LinearLayout
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ll_content"
        android:layout_marginRight="@dimen/size_12dp"
        android:layout_marginBottom="@dimen/size_16dp"
        android:background="@color/white"
        android:gravity="center"
        android:layout_width="@dimen/size_165dp"
        android:layout_height="@dimen/size_36dp">
    <TextView
        android:id="@+id/tv_manually_locate"
        android:text="手动定位"
        android:gravity="center"
        android:textColor="@color/third_class_text"
        android:layout_width="@dimen/size_80dp"
        android:layout_height="@dimen/size_32dp"/>
    <TextView
        android:id="@+id/tv_auto_locate"
        android:text="自动定位"
        android:gravity="center"
        android:background="@drawable/bg_locate_blue"
        android:textColor="@color/white"
        android:layout_width="@dimen/size_80dp"
        android:layout_height="@dimen/size_32dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/top_radius_back"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_44dp">

            <TextView
                android:id="@+id/vin_title"
                android:layout_width="@dimen/size_43sp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/size_12dp"
                android:gravity="center"
                android:text="车架号"
                android:textColor="@color/edit_text"
                android:textSize="@dimen/size_14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/car_vin_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/size_80dp"
                android:layout_marginRight="@dimen/size_40dp"
                android:text=""
                android:background="@color/white"
                android:textColor="@color/edit_text"
                android:textSize="@dimen/size_16sp"
                app:layout_constraintLeft_toRightOf="@+id/vin_title" />

            <ImageView
                android:id="@+id/scan_vin"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="@dimen/size_12dp"
                android:background="@mipmap/ic_scan"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1dp"
            android:background="@color/edit_line"
            android:layout_marginRight="@dimen/size_16dp"
            android:layout_marginLeft="@dimen/size_80dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_44dp">

            <TextView
                android:id="@+id/position_title"
                android:layout_width="@dimen/size_43sp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/size_12dp"
                android:gravity="center"
                android:text="位置"
                android:textColor="@color/edit_text"
                android:textSize="@dimen/size_14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/car_pos_txt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/size_26dp"
                android:gravity="center"
                android:text="重庆市渝北区仙桃数据谷C12"
                android:textColor="@color/edit_text"
                android:textSize="@dimen/size_16sp"
                app:layout_constraintLeft_toRightOf="@+id/position_title" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1dp"
            android:background="@color/edit_line"
            android:layout_marginRight="@dimen/size_16dp"
            android:layout_marginLeft="@dimen/size_80dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_44dp">

            <TextView
                android:id="@+id/warehouse_title"
                android:layout_width="@dimen/size_43sp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/size_12dp"
                android:gravity="center"
                android:text="仓库"
                android:textColor="@color/edit_text"
                android:textSize="@dimen/size_14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/warehouse_pos_txt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/size_26dp"
                android:gravity="center"
                android:text="重庆市渝北区仙桃数据谷C12"
                android:textColor="@color/edit_text"
                android:textSize="@dimen/size_16sp"
                app:layout_constraintLeft_toRightOf="@+id/warehouse_title" />

            <ImageView
                android:id="@+id/warehouse_next"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="@dimen/size_12dp"
                android:background="@drawable/pointer"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1dp"
            android:background="@color/edit_line"
            android:layout_marginRight="@dimen/size_16dp"
            android:layout_marginLeft="@dimen/size_80dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_112dp">

            <TextView
                android:id="@+id/photo_graph"
                android:layout_width="@dimen/size_43sp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/size_12dp"
                android:gravity="center"
                android:text="拍照"
                android:textColor="@color/edit_text"
                android:textSize="@dimen/size_14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/img_viewgroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="@dimen/size_26dp"
                android:orientation="horizontal"
                app:layout_constraintLeft_toRightOf="@+id/photo_graph"

                >

            </LinearLayout>

            <FrameLayout
                android:id="@+id/take_photo_btn"
                android:layout_width="@dimen/size_88dp"
                android:layout_height="@dimen/size_88dp"
                android:background="@color/gray_f2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/img_viewgroup"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="@dimen/size_24dp"
                    android:layout_height="@dimen/size_24dp"
                    android:layout_gravity="center"
                    android:background="@drawable/photo" />
            </FrameLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1dp"
            android:background="@color/edit_line"
            android:layout_marginRight="@dimen/size_16dp"
            android:layout_marginLeft="@dimen/size_80dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_44dp">

            <TextView
                android:id="@+id/descri_title"
                android:layout_width="@dimen/size_43sp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/size_12dp"
                android:gravity="center"
                android:text="描述"
                android:textColor="@color/edit_text"
                android:textSize="@dimen/size_14sp" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/size_16dp"
                android:layout_weight="1"
                android:hint="非必填"
                android:textColorHint="@color/second_class_text"
                android:background="@color/transparent"
                android:textColor="@color/edit_text_2"
                android:textSize="@dimen/size_16sp"
                android:layout_marginLeft="@dimen/size_26dp"
                app:layout_constraintLeft_toRightOf="@+id/descri_title" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1dp"
            android:background="@color/edit_line"
            android:layout_marginRight="@dimen/size_16dp"
            android:layout_marginLeft="@dimen/size_80dp"/>
        <TextView
            android:id="@+id/submit_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_44dp"
            android:layout_marginLeft="@dimen/size_16dp"
            android:layout_marginTop="@dimen/size_14dp"
            android:layout_marginRight="@dimen/size_16dp"
            android:background="@drawable/submit_btn_bac"
            android:gravity="center"
            android:text="提交"
            android:textColor="@color/bg_system"
            android:textSize="@dimen/size_14sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>