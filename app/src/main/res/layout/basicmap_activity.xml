<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.amap.api.maps.MapView
        android:id="@+id/main_map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <FrameLayout
        android:id="@+id/fram_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/size_83dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_83dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal"
        android:background="@color/bg_default"
        android:padding="@dimen/size_5dp"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/size_50dp"
            android:layout_marginTop="@dimen/size_16dp">
            <LinearLayout
                android:id="@+id/parking_selector"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv_parking_tab"
                    android:layout_width="@dimen/size_24dp"
                    android:layout_height="@dimen/size_24dp"
                    android:background="@drawable/parking_selector"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/tv_parking_tab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="停车"
                    android:textSize="@dimen/size_10sp"
                    android:textColor="@color/theme_blue"
                    android:layout_gravity="center"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/size_16dp"
            android:layout_marginRight="@dimen/size_50dp">
            <LinearLayout
                android:id="@+id/searching_selector"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv_search_tab"
                    android:layout_width="@dimen/size_24dp"
                    android:layout_height="@dimen/size_24dp"
                    android:background="@drawable/search_selector"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center"/>
                <TextView
                    android:id="@+id/tv_search_tab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="寻车"
                    android:textSize="@dimen/size_10sp"
                    android:textColor="@color/theme_blue"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
